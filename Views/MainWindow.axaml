<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:MäkihypynTyylipisteet.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="MäkihypynTyylipisteet.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="MäkihypynTyylipisteet">

    <Design.DataContext>
        <!-- This only sets the DataContext for the previewer in an IDE,
             to set the actual DataContext for runtime, set the DataContext property in code (look at App.axaml.cs) -->
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    
    
    <StackPanel>
        <StackPanel Orientation="Horizontal">
            <StackPanel Margin="20">
                <Label Content="K-piste"/>
                <NumericUpDown
                    ButtonSpinnerLocation="Right"
                    Value="{Binding kpiste}"
                    Increment="1"
                    />
            </StackPanel>
            <StackPanel Margin="20">
                <Label Content="Hypyn pituus"/>
                <NumericUpDown
                    ButtonSpinnerLocation="Right"
                    Value="{Binding hypynPituus}"
                    Increment="1"
                />
            </StackPanel>
        </StackPanel>
        
        <StackPanel>
       
            <DataGrid Margin="20"
                      ItemsSource="{Binding tuomorit}"
                      IsReadOnly="False"
                      GridLinesVisibility="All"
                      BorderThickness="1" BorderBrush="Gray"
                      HorizontalAlignment="Left"
                      >
                <DataGrid.Columns>
                    <DataGridTemplateColumn Header="Pisteet">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <NumericUpDown
                                    ButtonSpinnerLocation="Right"
                                    Value="{Binding pisteet}"
                                    Minimum="0"
                                    Maximum="20"
                                    Increment="0.5"
                                />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
        
        
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>
        
        <StackPanel>
        <DataGrid Margin="20 20 20 0"
                  ItemsSource="{Binding tuulet}"
                  IsReadOnly="False"
                  GridLinesVisibility="All"
                  BorderThickness="1" BorderBrush="Gray"
                  
                  HorizontalAlignment="Left"
                  >
            <DataGrid.Columns>
                <DataGridTemplateColumn 
                    Header="Tuulet"
                    >
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel>
                                <NumericUpDown
                                    ButtonSpinnerLocation="Right"
                                    Value="{Binding pisteet}"
                                    Increment="0.1"
                                    />
                            
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
        
        
            </DataGrid.Columns>
        </DataGrid>
            <TextBlock 
                Text="(vastatuulesta puolestaan kirjoita pienempi kuin 0)"
                Margin="20 0 20 20"
                />
        </StackPanel>
        <StackPanel Margin="20">
            <Button Content="Laske" Command="{Binding laske}"/>
            <TextBlock Text="{Binding Res}"/>
        </StackPanel>
    </StackPanel>
    

</Window>
